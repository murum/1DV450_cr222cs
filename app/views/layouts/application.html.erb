<!DOCTYPE html>
<html>
<head>
  <title>AMPTA</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<% flash.each do |key, value| %>
  <div class="flash_<%= key %>"><%= value %></div>
<% end %> 

<% if signed_in? %>
	<h1><%= link_to "Logga ut", signout_path %></h1
<% else %>
	<h1><%= link_to "Logga in", signin_path %></h1>
<% end %>

<%= yield %>

</body>
</html>
