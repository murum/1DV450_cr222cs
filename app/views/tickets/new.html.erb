<% project = Project.find(params[:project_id] )%>
<h1>Skapa Ticket</h1>

<% if @ticket.errors.any? %>
	<div id="error_messages">
		<h2>Fel vid skapandet av en ticket.</h2>
		<ul>
			<% @ticket.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>

<%= form_for @ticket, :url => { :action => "create" } do |f| %>

	<%= f.label :name %>
	<%= f.text_field :name %>
	
	<%= f.label :description %>
	<%= f.text_area :description %>
	
	<%= f.label :status_id %>
	<%= f.select(:status_id, options_from_collection_for_select(Status.all, :id, :status_name)) %>
	
	<%= f.label :user_id %>
	<%= f.select(:user_id, options_from_collection_for_select(project.users, :id, :email)) %>
	
	<%= f.submit "Skapa Ticket"%>

<% end %>
